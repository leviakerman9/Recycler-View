<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/project1_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="30dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/image_cardView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:elevation="0dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:id="@+id/project1_icon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="icon image"
                android:scaleType="centerCrop"
                android:src="@drawable/quote" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/project1_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image_cardView_id"
            android:layout_toEndOf="@+id/image_cardView_id"
            android:fontFamily="sans-serif-medium"
            android:text="The app title"
            android:textColor="#222222"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/project1_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/project1_title"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-light"
            android:layout_toEndOf="@+id/image_cardView_id"
            android:text="This is our first project description"
            android:textColor="#041379"
            android:textSize="14sp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>